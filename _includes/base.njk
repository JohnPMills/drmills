</head>
<body>
    <header class="site-header">
        <h1>{{ homepage.title or site.title }}</h1>
        {% if site.subtitle %}
           <h2 class="homepage-subtitle">{{ homepage.subtitle }}</h2>
        {% endif %}
    </header>

    <nav>
        {% set entries = site.navigation %}
        {% include "menu.njk" %}
    </nav>

    <main>
        {% if page.url == '/' %}
            <div class="homepage-content">
                {% if homepage.homepage_text %}
                    <div class="homepage-text">
                        {{ homepage.homepage_text | safe }}
                    </div>
                {% endif %}
            </div>
        {% else %}
            <h1>{{ title }}</h1>
            {{ content | safe }}
        {% endif %}

        <hr>
        {% set entries = homepage.menu %}
        {% include "menu.njk" %}

{# {%- for section in collections.sections -%}
          {% include "_section.njk" %}
        {%- endfor -%} #}
    </main>
{% include "footer.njk" %}
</body>
</html>
