---
layout: base.njk
---
<header class="homepage-header">
    <h1>{{ homepage.title or site.title }}</h1>

    {% if homepage.subtitle %}
        <h2 class="homepage-subtitle">{{ homepage.subtitle }}</h2>
    {% endif %}

    {% if homepage.homepage_text %}
    <style>
        .homepage-text a {
            color: black;
            text-decoration: none;
        }
        .homepage-text a:hover {
            font-weight: bold;
        }
    </style>
    <div class="homepage-text">
        {{ homepage.homepage_text | safe }}
    </div>
    {% endif %}

    {% if homepage.menu %}
        {% for menuSection in homepage.menu %}
            {% if menuSection.title == 'Selected Work' %}
                <h3 class="selected-work">{{ menuSection.title }}</h3>
            {% endif %}
        {% endfor %}
    {% endif %}
</header>
<main>
    <hr>
    {% set entries = homepage.menu %}
    {% include "menu.njk" %}
</main>
