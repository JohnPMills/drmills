<!-- base-static.njk -->
<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="{{ eleventy.generator }}">

    {% if site.description %}
    <meta name="description" content="{{ site.description }}">
    {% endif %}

    <meta name="keywords" content="psychologist + open science advisor">
    <title>{{ title or site.title }}</title>

    <link rel="stylesheet" href="/css/css.css"> 
    {% if page.url == '/' %}
        <script>
            if(location.hash) window.location = `/admin/#${location.href.split("#").pop()}`
        </script>
    {% endif %}

 <!-- Include the menu -->
    {% if menuData %}
        {% include "menu.njk" with { "entries": menuData } %}
    {% else %}
        <p>No menu data found.</p>
    {% endif %}
</head>
<body>
    <nav>
        {% set entries = site.navigation %}
        {% include "menu.njk" %}
    </nav>

    <main>
{% if page.url == '/' %}
            <div class="homepage-content">
                {% if homepage.homepage_text %}
                    <div class="homepage-text">
                        {{ homepage.homepage_text | safe }}
                    </div>
                {% endif %}
            </div>
        {% else %}
            {{ content | safe }}
        {% endif %}
<footer data-layout="footer">
      <p>
  &#169;2024 John P. Mills </p>
  <p>A work in progress, built with <a href="https://www.11ty.dev/">Eleventy</a>.</p>
</footer>
    </main>
</body>
</html>
